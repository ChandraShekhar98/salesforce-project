<aura:component >
    <aura:attribute name="value1" type="Integer" default="20"/>
    <aura:attribute name="value2" type="Integer" default="20"/>
    <aura:attribute name="sum" type="Integer" default="0"/>
    <div>
        <p>Sum of two numbers</p>
        {!v.value1}+{!v.value2}={!v.sum}
    </div>
    <br/>
    <ui:button label="Click Here" press="{!c.add}"/>
</aura:component>
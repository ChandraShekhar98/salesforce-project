<apex:page controller="TaskController">
    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockSection >
                <apex:pageBlockTable value="{!accList}" var="a" >
                    <apex:column >
                        <apex:inputCheckbox />
                    </apex:column>
                    <apex:column value="{!a.Name}"/>
                    <apex:column value="{!a.Phone}"/>
                </apex:pageBlockTable>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>